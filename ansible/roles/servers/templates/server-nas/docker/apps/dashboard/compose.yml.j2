---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:168f552f4b02ba3b4cc1d04a144405f10f96e473f74a7036e3d1e12f49be3a05 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
