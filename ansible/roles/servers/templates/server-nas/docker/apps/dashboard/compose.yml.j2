---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:c85502d7d5a679e0e33d9962513ed8f050c580979a847c3bad3d006d153092c7 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
