---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:06542a98a2ac14ad53724e1214e56e54b27687ab22e432ae0c1440ba0f5d2db4 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
