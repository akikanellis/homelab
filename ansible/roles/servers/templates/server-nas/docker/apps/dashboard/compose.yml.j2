---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.7@sha256:8656194a4d8a07d5dfccfc9dc0981c2a1ceb2b0a75ad8b596f8255e915d9c304 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
