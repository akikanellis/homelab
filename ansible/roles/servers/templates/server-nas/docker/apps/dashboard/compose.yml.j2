---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:d9297583dd477abb13c88864cfd0cc081dadde08214eab11fd5d140cbcd61136 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
