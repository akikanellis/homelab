---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:ddcff39e55141568466a5365485d441a910df281538312813b1539fa8b7c0940 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
