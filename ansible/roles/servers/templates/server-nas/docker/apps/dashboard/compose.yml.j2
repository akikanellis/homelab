---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:6f0f8dc42f6dcfc6198a6fdcb557d9061bb553966a93d5c4c4e0ac27e9f13cbd # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
