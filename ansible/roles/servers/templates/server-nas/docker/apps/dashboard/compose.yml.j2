---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:b770889df036658240e5fccb14488e3704e462dd45f12b548f76fd11cc91b2bd # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
