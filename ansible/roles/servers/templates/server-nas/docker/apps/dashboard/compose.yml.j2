---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:0c4ea16d6c1175aff2564bdb0eb0f3d3a50e325bd5861837fc6dc979c1f20f1d # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
