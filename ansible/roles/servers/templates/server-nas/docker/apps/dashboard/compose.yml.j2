---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:7ac120ad0b3e4261ffe6ce4213c3aa6836be3f78f2fdec165717c4c9ed0066da # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
