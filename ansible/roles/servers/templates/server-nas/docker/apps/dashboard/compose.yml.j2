---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.5@sha256:06955002bb5c9fdd7c7ce179e2b3b62cea0d7361a12186ee48f2c2839ec75fed # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
