---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:a4ec3c5f9a7c527c9732438e9d14584cff561b860f4788e4734f84f7526b719c # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
