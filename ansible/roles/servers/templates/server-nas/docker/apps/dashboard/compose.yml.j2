---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:f9dda31ae31dcdd246ddd40bf30f866c83495045381051f93c863346b0c8592e # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
