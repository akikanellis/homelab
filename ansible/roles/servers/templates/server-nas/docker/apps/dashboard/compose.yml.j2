---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:fa9af3d9d5049c183345b35924e712d79bc7bc394e2ac55241af565b3d00951b # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
