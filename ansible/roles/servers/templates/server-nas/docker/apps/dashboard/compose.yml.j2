---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:202f2b35e3343df9f87ece2f5f313e02e3451ccf47eb52f26746e1f7eb61920e # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
