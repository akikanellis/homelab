---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:edd34a97d7d20b30fb2e260a4d616165d2e93421a969985fcd14f09f2adf2448 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
