---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:bec0166e4217d4d390d70e74d80a4c235cfd9939482ac2786feed8f9d3c88208 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
