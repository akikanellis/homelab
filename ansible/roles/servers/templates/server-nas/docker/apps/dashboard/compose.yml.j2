---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:6fbdd0070edf5ae68498717428b69d6af678f1f489b6dd7c93775cd13a0cb87b # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
