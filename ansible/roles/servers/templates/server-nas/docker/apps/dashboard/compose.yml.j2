---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:b2fbe9f42089cae811f3d93f8e48f3e7007c03e327360854be68686c1aa1d5e8 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
