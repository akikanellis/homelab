---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:c680f706e0cfe29055bd5de243ea7540c12f53c419bf32eabe1e24cdcc78fd0d # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
