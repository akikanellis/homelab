---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:c19d5fc06d75f30a64700419b150021844a4718a8358e1d8dc70fce53c5871bc # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
