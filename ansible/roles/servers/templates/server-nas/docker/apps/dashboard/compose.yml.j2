---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:ed71a3735ec2ee7faf9bbaa07f3bb8b47b70b175625738b6b7cacfa228e7063c # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
