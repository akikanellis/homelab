---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.5@sha256:38554b83fb37e1701ec14d9521228e87ffebd30c4f9091bbe4401765f7a4efc8 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
