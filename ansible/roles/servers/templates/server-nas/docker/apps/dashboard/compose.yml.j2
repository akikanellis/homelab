---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:2c841b03f882e999d019b0b59463c16a2bc60eca5bbc98ef1fceff411cb1518b # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
