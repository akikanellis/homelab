---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:271e24382588f1e22b02d933da664f87412cac0c257d3b2d95b2fc914eb383fa # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
