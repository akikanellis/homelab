---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:b2c1417fa4529e1d75c3d8904c712d355ca627243d886f06e5bfd256a3a1b909 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
