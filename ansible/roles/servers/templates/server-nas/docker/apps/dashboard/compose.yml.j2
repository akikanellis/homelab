---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:fae58a9c85b58373f07277bc20a9eb95bed3e15082e5a9f49e015a2518c3dee3 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
