---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:9331c0afdfb26c3e640dd942c63eaf7d2533feb4a30bb92d895dd0f78f7c8e3a # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
