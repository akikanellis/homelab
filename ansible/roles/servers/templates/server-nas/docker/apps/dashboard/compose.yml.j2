---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:02876212e0f5ca17f81359222a84844e92452718fc9a4a3d336d2df363a523c9 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
