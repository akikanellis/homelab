---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:14549064a36e59cb35732914c912c1bc8664b8d73085fb21d10a547fb93d8869 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
