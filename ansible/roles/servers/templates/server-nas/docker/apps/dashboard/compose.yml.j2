---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.5@sha256:c73620a631b98f22012c43a069becd19b8f5b453e9e0583fdf53849bae0cff6c # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
