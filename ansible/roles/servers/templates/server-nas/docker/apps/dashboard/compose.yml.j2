---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:d5ea1175329e25781d0f30d9e7622f79d3fee2cf617b5c10e97e655103f743d5 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
