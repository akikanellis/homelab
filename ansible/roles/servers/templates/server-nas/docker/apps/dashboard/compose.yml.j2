---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:b3a1b10ae3e59c0103d483180b22ed014b5bd6896ba3086556c9ffe3e3f4ea59 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
