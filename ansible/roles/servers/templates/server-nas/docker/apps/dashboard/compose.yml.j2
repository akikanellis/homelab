---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.5@sha256:075b8bcfa7c0d7c2ab253e2d9a6d18806d821291faa18f347120c2891288c463 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
