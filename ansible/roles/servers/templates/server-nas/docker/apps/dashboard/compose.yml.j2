---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:187643c2e36341e0254892bb1debc3f81d390360a248b7abe2a741debac19fb1 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
