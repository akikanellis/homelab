---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:6fc5bba050c302953fc688b9f06c4dfc9644a145314332b389b3f5bef608d8f9 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
