---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:64c1b0f14a914ada112d1e643a5881c412e5dbb422957d411782d99ecf0bedf1 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
