---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:9bf41c2b5835a98b95c2083b7bfef21d9779e8fc228f7479f2bbb4f261b23665 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
