---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:2afd89f1e0250c79566cb792c703472ab421c1de3541b2a40d1484bae087c8b5 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
