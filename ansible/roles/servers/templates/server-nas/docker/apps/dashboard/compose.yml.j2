---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:88f21f6f34a97ed05d1d592374a4097b06ec1bf707193541b477620afdafb8c1 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
