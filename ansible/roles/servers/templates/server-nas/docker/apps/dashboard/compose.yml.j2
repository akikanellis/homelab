---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:4621ddf3365f08c0389b80416643cdbd4e49430d248739448fa3b9e8c5435a24 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
