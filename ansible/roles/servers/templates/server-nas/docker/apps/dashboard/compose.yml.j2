---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:e7126f6e8690ccd8bb7ad795ff884abcebcefbf3d931a11a7e1dab4c0ad1f2ae # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
