---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:b40b210de8e29390df8c420f36ab01fce2b756393ff5a7eb7566e5ed3bcc1689 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
