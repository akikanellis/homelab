---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:2323de7ce8c44a7cd7e83ca4fad896a2add05440fba11054c7e51477ef939a84 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
