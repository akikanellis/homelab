---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:dc476ff6a6deccf358f964d7144fb0c92f49c126b740daea718bd9851f975546 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
