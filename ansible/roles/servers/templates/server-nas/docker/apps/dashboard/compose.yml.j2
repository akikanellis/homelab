---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:89e41f9de100ee6623698f4af88b74510f4a593668a9cd6b251cca7a878aae90 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
