---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.5@sha256:b569fb6e227271a90558d2a39fb5b2fc01ad594a649bb202f23a26ec11dd6765 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
