---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:4e75f9b3f409d462226f432c5f3c15203865331387f826fbff8b6c843000decb # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
