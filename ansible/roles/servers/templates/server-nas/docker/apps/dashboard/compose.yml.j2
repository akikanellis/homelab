---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:d74a2d763c5f29eddbb6c8a10832afbd8fa21e0bedac8e002fc2255ed4e17d68 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
