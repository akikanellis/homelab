---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:dc4f01cd09a9a2f1dbb9c2029d1300070861355754004ac70b33723bd42ff957 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
