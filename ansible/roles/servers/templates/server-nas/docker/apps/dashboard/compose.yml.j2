---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:b5461643681f95b87dcdb439662e7808753e7e87291af682daed8c0d6d1d7630 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
