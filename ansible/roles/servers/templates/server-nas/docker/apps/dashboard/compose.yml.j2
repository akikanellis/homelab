---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.5@sha256:9fad0878952ba75a91ad1c30aea2ee1a773fc85bac23758d855a373488ac7388 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
