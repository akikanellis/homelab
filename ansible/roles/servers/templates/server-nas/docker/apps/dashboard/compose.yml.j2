---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.6@sha256:5c7d6ec3e622b4e0ea6b8ebdec545c5a10fcf1ac16648dda1a37338f1c52a832 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
