---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:fbe7d96d0e89661b940a1222774f50aae38728e5c000b247e821edeb3f27571d # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
