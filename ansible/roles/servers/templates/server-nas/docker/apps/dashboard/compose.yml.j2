---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:6546ec35a230fb15ad26676a27fdc1b07d1ace14ee1f27235bd6884c09af88a3 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
