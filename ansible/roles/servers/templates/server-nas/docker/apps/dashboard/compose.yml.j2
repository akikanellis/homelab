---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.6.1@sha256:3b861f5f7d6ff8d3bbe7f9def0138fd3336852340c45709b5da9251271541907 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
