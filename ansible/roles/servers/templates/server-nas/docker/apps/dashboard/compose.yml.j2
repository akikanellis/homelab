---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:2.5.8@sha256:4ce4e2966d4bb52dd6e1ecff98740588406bf8df04da46f02c4ea843a1d41db6 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"

      PUID: "{{ ansible_admin_user_uid }}"
      PGID: "{{ ansible_admin_user_gid }}"
    volumes:
      - "{{ volumes_directory }}/heimdall:/config"
    ports:
      - "180:80"
      - "1443:443"
    restart: always
