---
services:
  portainer:
    image: portainer/portainer-ce:2.18.3@sha256:d0e89bf59a3e8bb479226579673934a6338e4ffbe6946d4a55e12af632727c03 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"
    volumes:
      - "{{ volumes_directory }}/portainer:/data"

      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - "8000:8000"
      - "9000:9000"
    restart: always
