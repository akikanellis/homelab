---
services:
  portainer:
    image: portainer/portainer-ce:2.17.0@sha256:ff2b2d473e62efc6730f114a548325dcf39f920c34854eb62aa80dd20b321dc6 # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"
    volumes:
      - "{{ volumes_directory }}/portainer:/data"

      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - "8000:8000"
      - "9000:9000"
    restart: always
