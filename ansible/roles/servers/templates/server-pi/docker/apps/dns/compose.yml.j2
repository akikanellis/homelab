---
name: dns

services:
  pihole:
    image: pihole/pihole:2023.01.10@sha256:3338fb62b552c8342e60924c8e5d456ff80b9b7cfb46654c9af2ef7413cc41a0 # editorconfig-checker-disable-line
    hostname: dns-primary
    environment:
      TZ: "{{ timezone }}"

      WEBPASSWORD: "{{ pihole_password }}"
    volumes:
      - "{{ volumes_directory }}/pihole/etc-dnsmasq.d:/etc/dnsmasq.d"
      - "{{ volumes_directory }}/pihole/etc-pihole:/etc/pihole"
    ports:
      - "53:53"
      - "53:53/udp"
      - "80:80"
      - "443:443"
    dns:
      - 127.0.0.1
      - 8.8.8.8
    restart: always
