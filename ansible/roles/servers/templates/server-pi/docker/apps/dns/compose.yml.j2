---
name: dns

services:
  pihole:
    image: pihole/pihole:2022.11.2@sha256:586457b5ed6e888ca6674e27d3f063588a8b61fa0b61b80fecd8be3939ad2160 # editorconfig-checker-disable-line
    hostname: dns-primary.domantaki.com
    environment:
      TZ: "{{ timezone }}"
      WEBPASSWORD: "{{ pihole_password }}"
    volumes:
      - "{{ volumes_directory }}/pihole/etc-dnsmasq.d:/etc/dnsmasq.d"
      - "{{ volumes_directory }}/pihole/etc-pihole:/etc/pihole"
    ports:
      - "53:53"
      - "53:53/udp"
      - "80:80"
      - "443:443"
    dns:
      - 127.0.0.1
      - 8.8.8.8
    restart: always
