---
name: dns

services:
  pihole:
    image: pihole/pihole:2024.03.1@sha256:e3bb67ee283afee5fffd1d3ea8b95c4a2bf3aa445f955d4e5f3947d72904d580 # editorconfig-checker-disable-line
    hostname: dns-primary
    environment:
      TZ: "{{ timezone }}"

      WEBPASSWORD: "{{ pihole_password }}"
    volumes:
      - "{{ volumes_directory }}/pihole/etc-dnsmasq.d:/etc/dnsmasq.d"
      - "{{ volumes_directory }}/pihole/etc-pihole:/etc/pihole"
    ports:
      - "53:53"
      - "53:53/udp"
      - "80:80"
      - "443:443"
    dns:
      - 127.0.0.1
      - 8.8.8.8
    restart: always
