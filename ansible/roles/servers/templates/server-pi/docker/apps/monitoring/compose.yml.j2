---
name: monitoring

services:
  netdata:
    image: netdata/netdata:v1.36.1@sha256:a9c803191570d6f28f7e872673ee55f69dbfa7a17c3f99cb7c46ed799088ead0 # editorconfig-checker-disable-line
    hostname: netdata-server-pi.domantaki.com
    environment:
      DOCKER_HOST: docker-socket-proxy:2375
    volumes:
      - "{{ volumes_directory }}/netdata:/etc/netdata:ro"

      - /etc/group:/host/etc/group:ro
      - /etc/passwd:/host/etc/passwd:ro
      - /etc/os-release:/host/etc/os-release:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
    ports:
      - "19999:19999"
    security_opt:
      - apparmor:unconfined
    cap_add:
      - SYS_PTRACE
    restart: always

  docker-socket-proxy:
    # Unfortunately this image does not provide versions other than `latest`
    image: ghcr.io/tecnativa/docker-socket-proxy:latest # editorconfig-checker-disable-line
    environment:
      CONTAINERS: 1
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    ports:
      - "2375:2375"
    restart: always

  autoheal:
    image: willfarrell/autoheal:1.2.0 # editorconfig-checker-disable-line
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      AUTOHEAL_CONTAINER_LABEL: all
    restart: always
