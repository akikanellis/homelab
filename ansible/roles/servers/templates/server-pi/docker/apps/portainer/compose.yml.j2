---
name: portainer

services:
  portainer:
    image: portainer/portainer-ce:2.16.0@sha256:5e4bacd2fc844919214d36ffec942464741762c106ae22adb5f4997f0f73b741 # editorconfig-checker-disable-line
    volumes:
      - "{{ volumes_directory }}/portainer:/data"

      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - "8000:8000"
      - "9000:9000"
    restart: always
