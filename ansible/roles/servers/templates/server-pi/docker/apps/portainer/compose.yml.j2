---
name: portainer

services:
  portainer:
    image: portainer/portainer-ce:2.18.2@sha256:4488739b16a98364f7ffdb32f1152708ae2b2388add71b9aabbb1ab15275791c # editorconfig-checker-disable-line
    environment:
      TZ: "{{ timezone }}"
    volumes:
      - "{{ volumes_directory }}/portainer:/data"

      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - "8000:8000"
      - "9000:9000"
    restart: always
