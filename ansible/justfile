#!/usr/bin/env just --justfile

@_default:
  just --list

# Install project dependencies
install:
  #!/usr/bin/env bash
  python -m venv env
  source env/bin/activate
  pip install -r requirements.txt
  deactivate

# Run the tests
test:
  echo "no-op"

# Run the app
run:
  echo "no-op"

# Clean generated files
clean:
  rm -rf env
