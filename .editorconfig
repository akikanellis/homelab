# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

ij_visual_guides = 80

[*.{markdown,md}]
indent_size = 4
max_line_length = off

[*.pub]
max_line_length = off

[*.py]
indent_size = 4

[*.{yaml,yml}]
max_line_length = off

ij_yaml_spaces_within_braces = false
ij_yaml_spaces_within_brackets = false
